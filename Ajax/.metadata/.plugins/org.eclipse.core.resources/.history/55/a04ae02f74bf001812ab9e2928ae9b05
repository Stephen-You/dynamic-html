window.onload = function () {
	var person = "{\"name\" : \"zhangSan\",\"age\" : \"18\",\"sex\" : \"male\"}";
	var pEvl = eval("(" + person + ")");
	alert(pEvl.name + "," + pEvl.age + "," + pEvl.sex);
}
